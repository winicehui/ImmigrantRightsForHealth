extends layout

block content
  .landingPic
    img(src='/images/landingpage/landingpage.jpg').landingPic_picture
    .landingPic_text
      h1.boldText.landingPic_title IMMIGRANT RIGHTS 
        span.avoidWrap FOR HEALTH
      p.landingPic_description 
        | This website provides updated and accurate resources for immigrants who are seeking healthcare in New York. Information provided here is useful to both immigrant patients and their healthcare providers.
      a(href="/resources").ui.button.primary.landingPic_button Search Resources
    img(src='/images/landingpage/landingpage_wave1.svg').landingPic_wave
  .aboutUs
    .aboutUs_text
      h1.boldText About Us
      .ui.grid.stackable.two.column.aboutUs_banner
        .column
          p We are an interdisciplinary group of medical, digital, and social science researchers, immigration lawyers, and doctors from Cornell University and Weill Cornell Medicine.
        .column 
          p Our work focuses on identifying healthcare barriers that immigrants face and developing solutions to increase access to and engagement with healthcare benefits.
  .ourPurpose 
    .ourPurpose_text 
      h1.boldText Our purpose 
      .ui.grid.stackable.two.column.ourPurpose_banner
        .column.ten.wide 
          p RightsforHealth is a website containing accurate and updated information about the benefits available to immigrants and for which they are eligible based on their immigration status.
          p Our goal is to make information about immigration policies and laws that impact immigrantsâ€™ eligibility to public benefits more accessible to patients and their healthcare providers.
        .column.six.wide.justifyContent-center 
          img(src='/images/landingpage/landingpage_icon1.svg')(width='100%')
  img(src='/images/landingpage/landingpage_wave2.svg').affiliations_wave
  .affiliations 
    .affiliations_text 
      h1.boldText Affiliations 
      .ui.grid.stackable.two.column.top.aligned.affiliations_banner
        each affiliation in affiliationsInformation
          .column.eight.wide
            .ui.grid.stackable.two.column
              .column.three.wide.justifyContent-center 
                img(src=affiliation["icon_src"]).affiliations_icon
              .column.thirteen.wide 
                p 
                  span.boldText #{affiliation["bold_text"]} 
                  | #{affiliation["description"]}
  img(src='/images/landingpage/landingpage_wave3.svg').faqs_wave
  .faqs
    .faqs_text
      h1.boldText Frequently Asked Questions 
      .ui.grid.stackable.two.column.faqs_banner
        each faqs_section in faqsInformation
          .column
            a.ui.card.fluid.centered(href=faqs_section["link"])
              .meta.center.aligned.faqs_card_content
                img(src=faqs_section["icon_src"]).faqs_card_icon
                h1 #{faqs_section["card_title"]}
            each sublink_link, sublink_text in faqs_section["sub_links"]
              a.faqs_link(href=sublink_link)
                p #{sublink_text}
