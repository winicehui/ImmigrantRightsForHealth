.ui.borderless.fixed.menu.Header
  a(href='/')
    img(src='/images/logo.svg')#logo
  ul.headerList
    each headerLink, headerTitle in headerInfo
      li.headerListItems
        a(href=headerLink).darkBlueLink
          h4 #{headerTitle}
    li.headerIcon
      .ui.dropdown.floating.icon.button.large
        i.bars.icon
        .menu
          each headerLink, headerTitle in headerInfo 
            a(href=headerLink).item
              h5.primaryColor #{headerTitle}

script. 
  $(window).on("load", function() {
    let pathArray = window.location.pathname.split('/');
    const activeheaderLink = "/" + (pathArray[1] || 'home')
    $('a[href*="'+activeheaderLink+'"]').addClass('active');
  });